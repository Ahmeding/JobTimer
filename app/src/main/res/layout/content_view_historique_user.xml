<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_historique_admin2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tn.com.hitechart.eds.Activities.Users.Historique.ViewHistoriqueUserActivity"
    tools:showIn="@layout/activity_view_historique_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selectionner une date" />

            <Spinner
                android:id="@+id/spdatehistorique"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="ondisplaydata"
                android:text="Afficher"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>
        <!-- TIME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Rapport"
                    android:textSize="@dimen/textlblRapport" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="../../.."
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textvalueRapport" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technicien"
                    android:textSize="@dimen/textlblRapport" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView

                        android:id="@+id/tvusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adem Adem"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|top"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Pointage"
                    android:textSize="@dimen/textlblRapport" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:text="Arrivée"
                        android:textSize="@dimen/textvalueRapport" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:text="Sortie"
                        android:textSize="@dimen/textvalueRapport" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Matin"
                    android:textSize="@dimen/textlblRapport" />

                <TextView
                    android:id="@+id/tvtimeinm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08h13"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textvalueRapport" />

                <TextView
                    android:id="@+id/tvtimeoutm"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="12h33"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textvalueRapport" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Après-Midi"
                    android:textSize="@dimen/textlblRapport" />

                <TextView
                    android:id="@+id/tvtimeinam"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="13h30"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textvalueRapport" />

                <TextView
                    android:id="@+id/tvtimeoutam"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="17h16"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textvalueRapport" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titlerj"
                    android:textSize="@dimen/textlblTitreRapport" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Envoyé:"
                        android:textSize="@dimen/textlblRapport" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvissnotented"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Non"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="@dimen/textlblRapport" />

                        <TextView
                            android:id="@+id/tvissented"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oui"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="@dimen/textlblRapport" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- END TIME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <!-- DOSSIERS TRAITES-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dosstraites"
                android:textSize="@dimen/textlblRapport" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/numDoss"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textlblRapport" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/client"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textlblRapport" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duree"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textlblRapport" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/typeact"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textlblRapport" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resultat"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textlblRapport" />
                </LinearLayout>
            </LinearLayout>
            <!-- SEPARATOR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent" />

            </LinearLayout>
            <!-- END SEPARATOR -->


            <!-- SEPARATOR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <!-- LIST VIEW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></LinearLayout>
                <!--
                                <ListView
                                    android:id="@+id/taskRapportList"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp" />-->
                <ListView
                    android:id="@+id/dossierRapportList"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <!-- END LIST VIEW -->
            </LinearLayout>
            <!-- END SEPARATOR -->


        </LinearLayout>

        <!-- SEPARATOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>
        <!-- END SEPARATOR -->
        <!-- END DOSSIERS TRAITES-->

        <!-- AUTRE ACTIVITEES -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- AUTRE ACTIVITEES-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/autreacts"
                        android:textSize="@dimen/textvalueRapport" />

                </LinearLayout>

                <!-- LIGNE 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/activitee"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/time"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />
                    </LinearLayout>
                </LinearLayout>
                <!-- END LIGNE 1 -->
                <!-- SEPARATOR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                </LinearLayout>
                <!-- END SEPARATOR -->

                <!-- 3 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center">

                        <ListView
                            android:id="@+id/taskAutreActtList"
                            android:layout_width="match_parent"
                            android:layout_height="100dp" />
                    </LinearLayout>


                </LinearLayout>
                <!-- END AUTRE ACTIVITEES-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!-- SEPARATOR -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimaryDark" />
                <!-- END SEPARATOR -->

            </LinearLayout>
            <!-- FRAIS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!-- FRAIS ENGAGES-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- AUTRE ACTIVITEES-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/fraisengages"
                            android:textSize="@dimen/textvalueRapport" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/numDoss"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/textvalueRapport" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/designiation"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/textvalueRapport" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mttc"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/textvalueRapport" />
                        </LinearLayout>

                    </LinearLayout>
                    <!-- SEPARATOR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent" />

                    </LinearLayout>
                    <!-- END SEPARATOR -->
                    <!-- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!-- LIST ACHAT -->
                            <ListView
                                android:id="@+id/achatRapportList"
                                android:layout_width="match_parent"
                                android:layout_height="100dp" />
                            <!-- END LIST ACHAT -->
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <!-- END AUTRE ACTIVITEES-->
            </LinearLayout>
            <!-- END FRAIS -->


            <!-- SEPARATOR -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimaryDark" />
            </LinearLayout>
            <!-- END SEPARATOR -->


            <!-- COMPOSANTS  -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Composants:"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/numDossmsg"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qte"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />

                    </LinearLayout>

                </LinearLayout>
                <!-- SEPARATOR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                </LinearLayout>
                <!-- END SEPARATOR -->
                <ScrollView
                    android:id="@+id/svtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lllblcomp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/compRapportList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                </ScrollView>

            </LinearLayout>
            <!-- END COMPOSANTS  -->


            <!-- SEPARATOR -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimaryDark" />
            </LinearLayout>
            <!-- END SEPARATOR -->


            <!-- MESSGES  -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbladdcomment"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/numDossmsg"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/msg"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textvalueRapport" />

                    </LinearLayout>

                </LinearLayout>
                <!-- SEPARATOR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAccent" />

                </LinearLayout>
                <!-- END SEPARATOR -->
                <ScrollView
                    android:id="@+id/svmtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lllblcomp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/msgRapportList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                </ScrollView>

            </LinearLayout>
            <!-- END MESSAGES -->

        </LinearLayout>


        <!-- AUTRE ACTIVITEES -->


    </LinearLayout>

</ScrollView>
